                  <th class="border-bottom-0">
                    <h6 class="fw-semibold mb-0">Mark</h6>
                  </th>
                  <th class="border-bottom-0">
                    <h6 class="fw-semibold mb-0">No</h6>
                  </th>
                  <th class="border-bottom-0">
                    <h6 class="fw-semibold mb-0">Image</h6>
                  </th>
                  <th class="border-bottom-0">
                    <h6 class="fw-semibold mb-0">Student ID</h6>
                  </th>
                  <th class="border-bottom-0">
                    <h6 class="fw-semibold mb-0">Name</h6>
                  </th>
                  <th class="border-bottom-0">
                    <h6 class="fw-semibold mb-0">Contact</h6>
                  </th>
                  <th class="border-bottom-0">
                    <h6 class="fw-semibold mb-0">Attendance</h6>
                  </th>
                  <th class="border-bottom-0">
                    <h6 class="fw-semibold mb-0">Gender</h6>
                  </th>

                </tr>
              </thead>
              <form action="/addattendance" method="post">
                <input name="year" hidden type="text" value="1">
                <tbody>
                  <% var i=1 %>
                    <% firstyear.forEach((item)=>{ %>
                      <tr>
                        <td>
                          <input type="checkbox" class="myCheckbox" name="status_<%=item._id%>" value="on">
                          <input type="hidden" name="status_<%=item._id%>" value="off">

                          <input name="student_id" hidden type="text" value=<%=item._id%>>
                        </td>
                        <td class="border-bottom-0">
                          <h6 class="fw-semibold mb-0">
                            <%=i++%>
                          </h6>
                        </td>
                        <td>
                          <img src="../upload/<%=item.Student_Image%>" alt="" width="35" height="35"
                            class="rounded-circle">
                        </td>
                        <td class="border-bottom-0">
                          <p class="mb-0 fw-normal">
                            <%=item.Student_ID%>
                          </p>
                        </td>
                        <td class="border-bottom-0">
                          <p class="mb-0 fw-normal">
                            <%=item.FirstName%>
                          </p>
                          <p class="mb-0 fw-normal">
                            <%=item.LastName%>
                          </p>
                        </td>
                        <td class="border-bottom-0">
                          <p class="mb-0 fw-normal">
                            <%=item.Email%>
                          </p>
                          <p class="mb-0 fw-normal">
                            <%=item.Mobile_Number%>
                          </p>
                        </td>
                        <td class="border-bottom-0">
                          <p class="mb-0 fw-normal">
                            <%=item.Student_ID%>
                          </p>
                        </td>
                        <td class="border-bottom-0">
                          <p class="mb-0 fw-normal">
                            <%=item.Gender%>
                          </p>


                      </tr>
                      <% }) %>
                </tbody>
                <div class="modal-footer">
                  <button type="submit" class="btn btn-primary">Save Attendance</button>
                </div>
              </form>
            </table>
          </div>
        </div>
      </div>
    </div>
