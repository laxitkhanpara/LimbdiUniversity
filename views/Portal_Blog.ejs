<!doctype html>
<html lang="en">

<head>
    <%- include ('./UserPortal/vendar/Metahead.ejs') %>
</head>

<body>
    <!--  Body Wrapper -->
    <div class="page-wrapper" id="main-wrapper" data-layout="vertical" data-navbarbg="skin6" data-sidebartype="full"
        data-sidebar-position="fixed" data-header-position="fixed">
        <!-- Sidebar Start -->
        <%- include ('./UserPortal/vendar/sidebar.ejs') %>
            <!--  Sidebar End -->
            <!--  Main wrapper -->
            <div class="body-wrapper">
                <!--  Header Start -->
                <%- include ('./UserPortal/vendar/menubar.ejs') %>
                    <!--  Header End -->
                    <div class="container-fluid">
                        <!--  Row 1 -->
                        <div class="row">
                            <button type="button" class="btn btn-primary" data-bs-toggle="modal"
                                data-bs-target="#exampleModal">
                                Add Blog
                            </button>
                            <div class="card w-100">
                                <div class="card-body p-4">
                                    <h5 class="card-title fw-semibold mb-4">Blogs</h5>

                                    <div class="table-responsive">
                                        <table class="table text-nowrap mb-0 align-middle">
                                            <thead class="text-dark fs-4">
                                                <tr>

                                                    <th class="border-bottom-0">
                                                        <h6 class="fw-semibold mb-0">No</h6>
                                                    </th>
                                                    <th class="border-bottom-0">
                                                        <h6 class="fw-semibold mb-0">Tital</h6>
                                                    </th>
                                                    <th class="border-bottom-0">
                                                        <h6 class="fw-semibold mb-0">Delete</h6>
                                                    </th>

                                                </tr>
                                            </thead>
                                            <form action="/addattendance" method="post">
                                                <input name="year" hidden type="text" value="1">
                                                <tbody>
                                                    <% var i=1 %>
                                                        <% allBlogs.forEach((item)=>{ %>
                                                            <form action="/student/edit/" method="post"
                                                                enctype="multipart/form-data">

                                                                <tr>

                                                                    <td class="border-bottom-0">
                                                                        <h6 class="fw-semibold mb-0">
                                                                            <%=i++%>
                                                                        </h6>
                                                                    </td>

                                                                    <td class="border-bottom-0">
                                                                        <p class="mb-0 fw-normal">
                                                                            <%=item.BlogTitle%>
                                                                        </p>
                                                                    </td>
                                                                    <td class="border-bottom-0">
                                                                        <a class="btn btn-danger btn-sm m-1"
                                                                            href="/Blogdelete/<%=item.id%>">Delete</a>

                                                                    </td>


                                                                </tr>
                                                            </form>
                                                            <% }) %>
                                                </tbody>
                                            </form>
                                        </table>
                                    </div>
                                </div>
                            </div>
                            <!-- Modal -->
                            <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel"
                                aria-hidden="true">
                                <div class="modal-dialog modal-lg">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h1 class="modal-title fs-5" id="exampleModalLabel">Add Blog</h1>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal"
                                                aria-label="Close"></button>
                                        </div>
                                        <form action="/Blog" method="post" enctype="multipart/form-data">
                                            <div class="modal-body">
                                                <div class="mb-3 row">
                                                    <label for="inputPassword" class="col-sm-2 col-form-label">Blog
                                                        Image</label>
                                                    <div class="col-sm-10">
                                                        <input type="file" name="BlogImage" class="form-control">
                                                    </div>
                                                </div>
                                                <div class="mb-3 row">
                                                    <label for="inputPassword" class="col-sm-2 col-form-label">Blog
                                                        Title</label>
                                                    <div class="col-sm-10">
                                                        <input type="text" name="BlogTitle" class="form-control">
                                                    </div>
                                                </div>
                                                <div class="mb-3 row">
                                                    <label for="inputPassword" class="col-sm-2 col-form-label">Blog
                                                        Content</label>
                                                    <div class="col-sm-10">
                                                        <input type="text" name="BlogContent" class="form-control">
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary"
                                                    data-bs-dismiss="modal">Close</button>
                                                <button type="submit" class="btn btn-primary">Save changes</button>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        
                        <hr>
                        <div class="card w-100">
                            <div class="card-body p-4">
                                <h5 class="card-title fw-semibold mb-4">Events</h5>
                                <div class="table-responsive">
                                    <table class="table text-nowrap mb-0 align-middle">
                                        <thead class="text-dark fs-4">
                                            <tr>

                                                <th class="border-bottom-0">
                                                    <h6 class="fw-semibold mb-0">No</h6>
                                                </th>
                                                <th class="border-bottom-0">
                                                    <h6 class="fw-semibold mb-0">Tital</h6>
                                                </th>
                                                <th class="border-bottom-0">
                                                    <h6 class="fw-semibold mb-0">Delete</h6>
                                                </th>

                                            </tr>
                                        </thead>
                                        <form action="/addattendance" method="post">
                                            <input name="year" hidden type="text" value="1">
                                            <tbody>
                                                <% var i=1 %>
                                                    <% allEvent.forEach((item)=>{ %>
                                                        <form action="/student/edit/" method="post"
                                                            enctype="multipart/form-data">

                                                            <tr>

                                                                <td class="border-bottom-0">
                                                                    <h6 class="fw-semibold mb-0">
                                                                        <%=i++%>
                                                                    </h6>
                                                                </td>

                                                                <td class="border-bottom-0">
                                                                    <p class="mb-0 fw-normal">
                                                                        <%=item.EventTitle%>
                                                                    </p>
                                                                </td>
                                                                <td class="border-bottom-0">
                                                                    <a class="btn btn-danger btn-sm m-1"
                                                                        href="/Blogdelete/<%=item.id%>">Delete</a>

                                                                </td>


                                                            </tr>
                                                        </form>
                                                        <% }) %>
                                            </tbody>

                                        </form>
                                    </table>
                                </div>
                            </div>
                        </div>
                        <button type="button" class="btn btn-primary" data-bs-toggle="modal"
                            data-bs-target="#exampleModal1">
                            Add Event
                        </button>
                    </div>
                        <!-- Modal -->
                        <div class="modal fade" id="exampleModal1" tabindex="-1" aria-labelledby="exampleModalLabel"
                            aria-hidden="true">
                            <div class="modal-dialog modal-lg">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h1 class="modal-title fs-5" id="exampleModalLabel">Add Event</h1>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal"
                                            aria-label="Close"></button>
                                    </div>
                                    <form action="/Event" method="post" enctype="multipart/form-data">
                                        <div class="modal-body">
                                            <div class="mb-3 row">
                                                <label for="inputPassword" class="col-sm-2 col-form-label">Event
                                                    Image</label>
                                                <div class="col-sm-10">
                                                    <input type="file" name="EventImage" class="form-control">
                                                </div>
                                            </div>
                                            <div class="mb-3 row">
                                                <label for="inputPassword" class="col-sm-2 col-form-label">Event
                                                    Date</label>
                                                <div class="col-sm-10">
                                                    <input type="Text" name="EventDate" class="form-control">
                                                </div>
                                            </div>
                                            <div class="mb-3 row">
                                                <label for="inputPassword" class="col-sm-2 col-form-label">Event
                                                    Title</label>
                                                <div class="col-sm-10">
                                                    <input type="text" name="EventTitle" class="form-control">
                                                </div>
                                            </div>
                                            <div class="mb-3 row">
                                                <label for="inputPassword" class="col-sm-2 col-form-label">Event
                                                    Content</label>
                                                <div class="col-sm-10">
                                                    <input type="text" name="EventContent" class="form-control">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary"
                                                data-bs-dismiss="modal">Close</button>
                                            <button type="submit" class="btn btn-primary">Save changes</button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                    <%- include ('./UserPortal/vendar/footer.ejs') %>

            </div>
    </div>
    <%- include ('./UserPortal/vendar/scripts.ejs') %>
</body>

</html>