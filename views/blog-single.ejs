	<!-- font awesome website cdn for icons import -->

	<script src="https://kit.fontawesome.com/51d768ed59.js" crossorigin="anonymous"></script>

	<link href="https://fonts.googleapis.com/css?family=Poppins:100,200,400,300,500,600,700" rel="stylesheet">
