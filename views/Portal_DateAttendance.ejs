<!doctype html>
<html lang="en">

<head>
    <%- include ('./UserPortal/vendar/Metahead.ejs') %>

</head>

<body>
    <!--  Body Wrapper -->
    <div class="page-wrapper" id="main-wrapper" data-layout="vertical" data-navbarbg="skin6" data-sidebartype="full"
        data-sidebar-position="fixed" data-header-position="fixed">
        <!-- Sidebar Start -->
        <%- include ('./UserPortal/vendar/sidebar.ejs') %>
            <!--  Sidebar End -->
            <!--  Main wrapper -->
            <div class="body-wrapper">
                <!--  Header Start -->
                <%- include ('./UserPortal/vendar/menubar.ejs') %>
                    <!--  Header End -->
                    <div class="container-fluid">
                        <!--  Row 1 -->
                        <div class="row">
                            <div class="table-responsive">
                                <table class="table text-nowrap mb-0 align-middle">
                                    <thead class="text-dark fs-4">
                                        <tr>

                                            <th class="border-bottom-0">
                                                <h6 class="fw-semibold mb-0">No</h6>
                                            </th>
                                            <th class="border-bottom-0">
                                                <h6 class="fw-semibold mb-0">Image</h6>
                                            </th>
                                            <th class="border-bottom-0">
                                                <h6 class="fw-semibold mb-0">Student ID</h6>
                                            </th>
                                            <th class="border-bottom-0">
                                                <h6 class="fw-semibold mb-0">Name</h6>
                                            </th>
                                            <th class="border-bottom-0">
                                                <h6 class="fw-semibold mb-0">Contact</h6>
                                            </th>
                                            <th class="border-bottom-0">
                                                <h6 class="fw-semibold mb-0">Attendance</h6>
                                            </th>
                                            <th class="border-bottom-0">
                                                <h6 class="fw-semibold mb-0">Gender</h6>
                                            </th>
                                            <th class="border-bottom-0">
                                                <h6 class="fw-semibold mb-0">Status</h6>
                                            </th>

                                        </tr>
                                    </thead>

                                    <input name="year" hidden type="text" value="1">
                                    <tbody>
                                        <% var i=1 %>
                                            <% attendanceData.forEach((item)=>{ %>
                                                <tr>

                                                    <td class="border-bottom-0">
                                                        <h6 class="fw-semibold mb-0">
                                                            <%=i++%>
                                                        </h6>
                                                    </td>
                                                    <td>
                                                        <img src="../upload/<%=item.Student_Image%>" alt="" width="35"
                                                            height="35" class="rounded-circle">
                                                    </td>
                                                    <td class="border-bottom-0">
                                                        <p class="mb-0 fw-normal">
                                                            <%=item.Student_ID%>
                                                        </p>
                                                    </td>
                                                    <td class="border-bottom-0">
                                                        <p class="mb-0 fw-normal">
                                                            <%=item.FirstName%>
                                                        </p>
                                                        <p class="mb-0 fw-normal">
                                                            <%=item.LastName%>
                                                        </p>
                                                    </td>
                                                    <td class="border-bottom-0">
                                                        <p class="mb-0 fw-normal">
                                                            <%=item.Email%>
                                                        </p>
                                                        <p class="mb-0 fw-normal">
                                                            <%=item.Mobile_Number%>
                                                        </p>
                                                    </td>
                                                    <td class="border-bottom-0">
                                                        <p class="mb-0 fw-normal">
                                                            <%=item.Student_ID%>
                                                        </p>
                                                    </td>
                                                    <td class="border-bottom-0">
                                                        <p class="mb-0 fw-normal">
                                                            <%=item.Gender%>
                                                        </p>
                                                    </td>
                                                    <td>
                                                    <% if(item.Gender == 'absent'){ %>
                                                        <button type="button" class="btn btn-success m-1">Present</button>
                                                    <%}else{%>
                                                    <button type="button" class="btn btn-danger m-1">Absent</button>
                                                    <%}%>
                                                </td>
                                                </tr>
                                                <% }) %>
                                    </tbody>
                                </table>
                            </div>
                        </div>

                    </div>
                    <%- include ('./UserPortal/vendar/footer.ejs') %>

            </div>
    </div>


    <%- include ('./UserPortal/vendar/scripts.ejs') %>
</body>

</html>