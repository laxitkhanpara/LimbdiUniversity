<!doctype html>
<html lang="en">

<head>
    <%- include ('./UserPortal/vendar/Metahead.ejs') %>

</head>

<body>
    <!--  Body Wrapper -->
    <div class="page-wrapper" id="main-wrapper" data-layout="vertical" data-navbarbg="skin6" data-sidebartype="full"
        data-sidebar-position="fixed" data-header-position="fixed">
        <!-- Sidebar Start -->
        <%- include ('./UserPortal/vendar/sidebar.ejs') %>
            <!--  Sidebar End -->
            <!--  Main wrapper -->
            <div class="body-wrapper">
                <!--  Header Start -->
                <%- include ('./UserPortal/vendar/menubar.ejs') %>
                    <!--  Header End -->
                    <div class="container-fluid">
                        <!--  Row 1 -->
                        <div class="row">
                            <div class="col-lg-8 d-flex align-items-strech">
                                <div class="card w-100">
                                    <div class="card-body">
                                        <% if ( UserType === "Admin"){ %>
                                        <h5 class="card-title fw-semibold mb-4">Details</h5>

                                        <div class="d-flex flex-row justify-content-evenly">

                                            <div class="card">
                                                <div class="card-header text-bg-primary h3">
                                                    Total student
                                                </div>
                                                <div class="card-body text-bg-light-primary">
                                                    <h1><%=totalstudent.length%></h1>
                                                </div>
                                            </div>

                                            <div class="card">
                                                <div class="card-header text-bg-primary h3">
                                                    Total Faculty
                                                </div>
                                                <div class="card-body text-bg-light-primary">
                                                    <h1><%=totalfaculty.length%></h1>
                                                </div>
                                            </div>

                                            

                                        </div>
                                        <% } %>

                                        <% if ( UserType === "Student"){ %>
                                            <h5 class="card-title fw-semibold mb-4">Time Table</h5>
    
                                            <embed src="./upload/<%=timetable[0].TimeTable%>" width="100%" height="600px" frameborder="0"></embed>

                                            <% } %>
                                            <% if ( UserType === "Faculty"){ %>
                                                <h5 class="card-title fw-semibold mb-4">Time Table</h5>
        
                                                <embed src="./upload/<%=timetable[0].TimeTable%>" width="100%" height="600px" frameborder="0"></embed>
    
                                                <% } %>
                                        
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-4">
                                <div class="row">
                                    <div class="col-lg-12">
                                        <!-- Yearly Breakup -->
                                        <div class="card overflow-hidden">
                                            <div class="card-body p-4 text-center">
                                                <% if(UserType == 'Student') { %>
                                                    
                                                <img src="./upload/<%= user.Student_Image%>" alt="" width="150"
                                                    height="150" class="rounded-circle">

                                                
                                                <% }else if(UserType == 'Faculty') { %>
                                                    
                                                    <img src="./upload/<%= user.Faculty_Image%>" alt="" width="150"
                                                        height="150" class="rounded-circle">

                                                    <%}else{%>
                                                        <img src="../assets/images/profile/user-1.jpg" alt="" width="150"
                                                        height="150" class="rounded-circle">
                                                        <%}%>
                                                    <% if(UserType != 'Admin') { %>  
                                                <h4 class="card-title mt-2 mb-9 fw-semibold"><%= user.FirstName%> <%= user.LastName%></h4>
                                                <%}else{%>
                                                    <h4 class="card-title mt-2 mb-9 fw-semibold">Admin</h4>

                                                <%}%>
                                                <hr>
                                                <% if(UserType == 'Student') { %> 
                                                <h4 class="card-title mb-9 fw-semibold"><%= user.Student_ID%></h4>
                                                <%}%>
                                                <% if(UserType == 'Faculty') { %> 
                                                    <h4 class="card-title mb-9 fw-semibold"><%= user.Faculty_ID%></h4>
                                                    <%}%>
                                                <hr>
                                                <div class="row text-start">
                                                    <h5 class="fw-semibold mb-3">Year: <span><%= user.year%></span></h5>
                                                    <h5 class="fw-semibold mb-3">Mobile Number: <span><%= user.Mobile_Number%></span>
                                                    </h5>
                                                    <h5 class="fw-semibold mb-3">Email: <span><%= user.Email %></span></h5>               
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                    </div>
            </div>
    </div>
    <%- include ('./UserPortal/vendar/scripts.ejs') %>
</body>

</html>